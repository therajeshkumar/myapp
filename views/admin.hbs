
<div class="row">
    <div class="col-xs-4">
          <section class="get">
    <h3> User List</h3>
   <div>
        {{# each user }}
            <article class="user-list">
                     <div>Id: {{ this.id }}</div>
                  <div>Name: {{ this.name }}</div>
                <div>Email: {{ this.email }}</div>
                <div>Password: {{ this.password }}</div> 
            </article>
        {{/each}}
    </div>
</section>
    </div>
 <div class="col-xs-4">
        <form class="update-user-from" action="/update" method="POST" >
            <legend> <h2> Update User </h2> </legend>
         <div class="form-group">
            <label for="id"> Enter Id  </label>
            <input type="text" 
            name="id" 
            class="form-control" 
            id="id" 
            value="{{user.id}}">
        </div>

         <div class="form-group">
            <label for="name"> Enter name  </label>
            <input type="text" 
            name="name" 
            class="form-control" 
            id="name" 
            placeholder="Enter name">
        </div>

        <div class="form-group">
            <label for="email"> Enter Emai  </label>
            <input type="text" 
            name="email" 
            class="form-control" 
            id="email" 
            placeholder="Enter email">
        </div>

        <div class="form-group">
            <label for="password"> Enter Password  </label>
            <input type="text" 
            name="password" 
            class="form-control" 
            id="password" 
            placeholder="Enter password">
        </div> 

            <div class="form-group">
                <button type="submit" class="btn btn-default pull-right">Update</button> 
           </br>  
            </div>
        </form>
    </div>
   
 <div class="col-xs-4">
        <form class="login-from" action="/delete" method="POST" >
        <legend> <h2> Delete User </h2> </legend>
         <div class="form-group">
